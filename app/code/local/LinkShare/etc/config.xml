<?xml version="1.0"?>
<config>    
    <modules>
        <FW_LinkShare>
            <version>1.0.0</version>
        </FW_LinkShare>
    </modules>
    <global>
        <models>
            <fw_linkshare>
                <class>FW_LinkShare_Model</class>
            </fw_linkshare>
        </models>
        <blocks>
            <fw_linkshare>
                <class>FW_LinkShare_Block</class>
            </fw_linkshare>
        </blocks>
        <helpers>
            <fw_linkshare>
                <class>FW_LinkShare_Helper</class>
            </fw_linkshare>
        </helpers>
    </global>
    <frontend>
        <events>
            <checkout_onepage_controller_success_action>
                <observers>
                    <fw_linkshare_order_success>
                        <class>fw_linkshare/observer</class>
                        <method>onOrderSuccessPageView</method>
                    </fw_linkshare_order_success>
                </observers>
            </checkout_onepage_controller_success_action>
            <checkout_multishipping_controller_success_action>
                <observers>
                    <fw_linkshare_order_success>
                        <class>fw_linkshare/observer</class>
                        <method>onOrderSuccessPageView</method>
                    </fw_linkshare_order_success>
                </observers>
            </checkout_multishipping_controller_success_action>
        </events>
    </frontend>
</config>